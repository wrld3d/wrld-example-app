<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_list_item"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/menu_closest_label"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_title_height"
        android:background="@color/ui_border"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/menu_closest_label_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:text="@string/search_closest_label"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@drawable/menu_item_states"
            android:textSize="14sp"
            android:paddingLeft="8dp"/>

        <View
            android:id="@+id/search_menu_closest_label_separator"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_item_divider_height"
            android:layout_marginTop="4dp"
            android:background="@color/table_divider"/>
    </LinearLayout>

    <View
        android:id="@+id/menu_list_item_separator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_item_divider_height"
        android:background="@color/table_divider"
        android:visibility="gone"/>

    <View
        android:id="@+id/menu_list_group_separator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_section_divider_height"
        android:layout_marginLeft="-33dp"
        android:layout_marginRight="-6dp"
        android:background="@color/menu_header_separator"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_header_item_selected_states" >

        <TextView
            android:id="@+id/menu_list_item_name"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/menu_list_openable_shape"            
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@drawable/menu_item_states"
            android:textSize="22sp"
            android:text=""/>

        <ImageView
            android:id="@+id/menu_list_openable_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/sub_menu_arrow_states" >
        </ImageView>
    </RelativeLayout>
</LinearLayout>