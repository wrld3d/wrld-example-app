<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_list_item"
    android:layout_width="212dp"
    android:layout_height="39dp" >
    
	<LinearLayout
	    android:id="@+id/menu_list_item_background_container"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
		
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" >

	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" >

	            <ImageView
	                android:id="@+id/menu_list_item_icon"
	                android:layout_width="26dp"
	                android:layout_height="26dp"
	                android:layout_margin="6dp"
	                android:contentDescription="@string/content_desc_category_icon"
	                android:scaleType="fitCenter"
	                android:src="@drawable/icon1_coffee" />

	            <TextView
	                android:id="@+id/menu_list_item_name"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_gravity="center_vertical"
	                android:gravity="left|center_vertical"
	                android:singleLine="true"
	                android:text="Around Me"
	                android:textAppearance="?android:attr/textAppearanceListItemSmall"
	                android:textColor="@color/table_sub_cell_text"
	                android:textSize="16sp" />

	        </LinearLayout>

	        <ImageView
	            android:id="@+id/menu_list_item_content_background"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" />

	        <RelativeLayout
	            android:id="@+id/menu_list_divider_container"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_alignParentBottom="true"
	            android:background="@color/ui_border" />

	    </RelativeLayout>

	</LinearLayout>
</RelativeLayout>