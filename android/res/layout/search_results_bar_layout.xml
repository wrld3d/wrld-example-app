<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/search_results_bar_width"
    android:layout_height="50dp"
    android:background="@color/transparent"
    android:gravity="center_vertical"  >

    <View
        android:id="@+id/search_menu_result_background_view"
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:background="@color/ui_border" />

    <View
        android:id="@+id/search_menu_edit_text_background"
        android:layout_width="295dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:background="@drawable/search_edit_background"
        android:paddingLeft="8dp" />

    <EditText
        android:id="@+id/search_menu_view_edit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:background="@color/transparent"
        android:ems="10"
        android:hint="Enter search term"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
    	android:imeOptions="actionDone"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/search_menu_clear_button">

        <requestFocus android:layout_width="wrap_content" />

    </EditText>

    <ProgressBar
        android:id="@+id/search_menu_spinner"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignRight="@+id/search_menu_edit_text_background"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/search_menu_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/search_menu_edit_text_background"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonsmall_close_states"
        android:clickable="true" />

</RelativeLayout>
 