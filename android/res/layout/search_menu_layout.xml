<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_menu_view"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <LinearLayout
            android:id="@+id/search_menu_drag_tab_container_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp" >

            <include layout="@layout/search_results_bar_layout" />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp" >

                <ImageButton
                    android:id="@+id/search_menu_drag_button_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_button_color_states"
                    android:src="@drawable/button_search_menu_states" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_menu_list_container_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" 
            android:background="@color/gold"
            android:orientation="vertical"
            android:overScrollMode="never" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"
                layout="@layout/search_menu_view_list_container_layout"
                android:overScrollMode="never" />

            <ListView
                android:id="@+id/search_menu_options_list_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:background="@color/ui_border"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:overScrollMode="never"
                android:paddingLeft="32dp"
                android:paddingRight="5dp" >
            </ListView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
