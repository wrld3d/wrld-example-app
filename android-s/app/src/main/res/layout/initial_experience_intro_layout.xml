<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/initial_ux_view_background"
    android:clipChildren="false"
	android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/initial_ux_intro_banner"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:background="@color/gold" >
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/banner_logo" />
        
    </RelativeLayout>
    
	<!--  Menu dialog -->
	<LinearLayout
	    android:id="@+id/initial_ux_menu_dialog"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:orientation="horizontal"
	    android:layout_marginTop="50dp"
	    android:layout_marginRight="85dp" >
	    
	    <include layout="@layout/initial_experience_intro_dialog_layout"/>
	    
	    <RelativeLayout
	        android:layout_width="30dp"
	        android:layout_height="10dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/arrow3_right" />
	</LinearLayout>
	
	<!--  Compass dialog -->
	<LinearLayout
	    android:id="@+id/initial_ux_compass_dialog"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="90dp"
	    android:orientation="vertical" >
	    
	    <include layout="@layout/initial_experience_intro_dialog_layout"/>
	    
	    <RelativeLayout
	        android:layout_width="10dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/arrow3_down" />
	</LinearLayout>
	
	<!--  Mapmode dialog -->

	<LinearLayout
	    android:id="@+id/initial_ux_mapmode_dialog"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="false"
	    android:layout_marginBottom="75dp"
	    android:layout_marginRight="5dp"
	    android:layout_toLeftOf="@id/initial_ux_compass_dialog"
	    android:orientation="vertical" >
	    
	    <include layout="@layout/initial_experience_intro_dialog_layout"/>
	    
	    <RelativeLayout
	        android:layout_width="10dp"
	        android:layout_height="30dp"
	        android:layout_gravity="right"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/arrow3_down" />
	</LinearLayout>
	
	<!--  Pin Creation dialog -->

	<LinearLayout
	    android:id="@+id/initial_ux_pin_creation_dialog"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="75dp"
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@id/initial_ux_compass_dialog"
	    android:orientation="vertical" >
	    
	    <include layout="@layout/initial_experience_intro_dialog_layout"/>
	    
	    <RelativeLayout
	        android:layout_width="10dp"
	        android:layout_height="30dp"
	        android:layout_gravity="left"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/arrow3_down" />
	</LinearLayout>
    
</RelativeLayout>
